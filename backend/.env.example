# Database Configuration
DATABASE_URL=postgresql+asyncpg://commander:changeme@localhost:5432/commander_ai
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_MAX_CONNECTIONS=50

# Qdrant Configuration
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=
QDRANT_COLLECTION_NAME=commander_ai_memories

# OpenAI Configuration
OPENAI_API_KEY=your-api-key-here
OPENAI_MODEL=gpt-4
OPENAI_EMBEDDING_MODEL=text-embedding-ada-002
OPENAI_TEMPERATURE=0.7
OPENAI_MAX_TOKENS=2000

# Application Configuration
APP_ENV=development
APP_DEBUG=true
APP_LOG_LEVEL=INFO
APP_SECRET_KEY=your-secret-key-change-in-production

# WebSocket Configuration
WS_HEARTBEAT_INTERVAL=30
WS_MAX_CONNECTIONS=100

# Memory Configuration
STM_TTL_SECONDS=3600  # 1 hour
LTM_SIMILARITY_THRESHOLD=0.7
MEMORY_CONSOLIDATION_INTERVAL=3600  # Run every hour

# Agent Configuration
MAX_CONSULTATION_DEPTH=3  # Prevent infinite consultation loops
AGENT_TIMEOUT_SECONDS=300  # 5 minutes
TASK_QUEUE_SIZE=1000

# CORS Configuration (for frontend)
CORS_ORIGINS=http://localhost:3000,http://localhost:3001
CORS_ALLOW_CREDENTIALS=true
